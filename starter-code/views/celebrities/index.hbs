<h2>Mongo Celebrities</h2>
<div class="celebrities">
  {{#each celebrities}}
  <div class="celebritydetails">    
    <div><a class="celebritylink" href="/celebrities/{{this._id}}">{{this.name}}</a>
    <div class="celebrityform">
      <form action="/celebrities/{{this._id}}/delete"  method="post">
        <button type="submit" class="buttondel">Delete</button>
      </form>  
      <form action="/celebrities/{{this._id}}/edit"  method="get">
        <button type="submit" class="buttondel">Edit</button>
      </form>   
    </div>   
  </div>
  </div>
  {{/each}}
  <br>
  <br>
  <a href="/">Home</a>
</div>