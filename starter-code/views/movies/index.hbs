<h2>Mongo Movies</h2>
<div class="movies">
  {{#each movies}}
  <div class="moviedetails">   
    <div class="movielink"><a href="/movies/{{this._id}}">{{this.title}}</a> 
    <div class="formscontainer" style="float:right">
      <form action="/movies/{{this._id}}/delete"  method="post">
        <div><button type="submit" class="buttondel">Delete</button></div>
      </form>  
      <form action="/movies/{{this._id}}/edit"  method="get">
        <div><button type="submit" class="buttondel">Edit</button></div>
      </form>   
    </div> 
         
  </div>   
  </div>
  {{/each}}
  <br>
  <br>
  <a href="/">Home</a>
</div>